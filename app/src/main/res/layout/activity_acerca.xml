<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo3"
    tools:context="com.example.dell.proyecto_final_one.AcercaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000"
        android:alpha="0.95">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dos"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:lineSpacingMultiplier="1"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/textofin"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="10dp"    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/foto"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tres"
        android:textColor="@color/primaryTextColor"
        android:lineSpacingMultiplier="0.9"
        android:layout_margin="15dp"
        android:textSize="@dimen/textofin"
        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/contato"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/ic_call_black_24dp"
            android:onClick="Ibllamar"
            />
        <ImageButton
            android:id="@+id/mensaje"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/goog"
            android:layout_marginLeft="@dimen/acer"
            android:onClick="Ibcorreo"
            />
        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/face"
            android:layout_marginLeft="@dimen/acer"
            android:onClick="Ibredes"

            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>